h1 Admin Page
.beerwrap
  .container
    form#add-beer
      h2 Add a beer:
      h3 Beer name:
      input#new-beer-name
      h3 Brewery:
      input#new-brewery-name
      h3 Brewery location:
      input#new-brewery-location
      h3 ABV
      input#new-abv

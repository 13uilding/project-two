      p#chosen-beer
      input#update-brewery
      h3 Brewery location:
      input#update-location
      h3 ABV
      input#update-abv
      h3 Short description of beer:
      textarea#update-short
      h3 Longer description of beer (optional):
      textarea#update-long
      button Submit
.container
  form#del-beer
    h2 Delete a beer:
    select#del-beer-select
      option#0 None Selected
    button DELETE
.board-game-wrap
  .container
    form#api-board-game
      h2 Search the API:
      input
      button Search
  .container
    form#select-board-game
      h3 Update a Board Game:
      select#choose-game
        option(value='0') None Selected
      button Select
.container
  form#board-game-form(method='post' action='/api/games')
    h2 Add a Game:
    h3 Board Game Name:
    input(name='game_name')
    h3 Rating:
    input(name='rating')
    h3 Category:
    input(name='category')
    h3 Minimum Time:
    input(name='min_time')
    h3 Maximum Time
    input(name='max_time')
    h3 Minimum Players
    input(name='min_players')
    h3 Maximum Players:
    input(name='max_players')
    h3 Shorter Description of the Game:
    textarea(name='short_description')
    h3 Longer Description of the Game (optional):
    textarea(name='long_description')
    h3 Image Url (Thumbnail)
    input(name='img_thumb')
    h3 Image Url (Large)
    input(name='img_original')
    h3 Url To Purchase Game
    input(name='url')
    button Submit
.container
  form#del-game
    h2 Delete a game:
    select#del-game-select
      option#0 None Selected
    button DELETE
